<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/markViewRoot"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/markViewSoso"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/sosoIcon"
            android:src="@drawable/notbad"
            android:layout_gravity="left"
            android:layout_height="50dp"
            android:layout_width="50dp">
        </ImageView>
        <TextView
            android:id="@+id/sosoCount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/markViewHappy"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/happyIcon"
            android:src="@drawable/happy"
            android:layout_gravity="left"
            android:layout_height="50dp"
            android:layout_width="50dp">
        </ImageView>
        <TextView
            android:id="@+id/happyCount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/markViewAngry"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/angryIcon"
            android:src="@drawable/angry"
            android:layout_gravity="left"
            android:layout_height="50dp"
            android:layout_width="50dp">
        </ImageView>
        <TextView
            android:id="@+id/angryCount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/markViewSad"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/sadIcon"
            android:src="@drawable/sad"
            android:layout_gravity="left"
            android:layout_height="50dp"
            android:layout_width="50dp">
        </ImageView>
        <TextView
            android:id="@+id/sadCount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_gravity="right"
            />

    </LinearLayout>
</LinearLayout>